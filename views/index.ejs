<%- include('./partials/header.ejs')%>
<%- include('./partials/homenavbar.ejs')%>
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo</h1>
            <p class="lead">Este é um blog dedicado aos programadores e as suas duvidas.</p>
            <hr class="my-4">
            <p>Para mais informações clique a baixo.</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Leia aqui</a>
          </div>
        <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="<%= article.slug %>">Ler artigo</a>
                </div>

            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <a href="/articles/page/2" style="float:right">Next>></a>
                <hr>
            </div>
        </div>
    </div>
</body>
